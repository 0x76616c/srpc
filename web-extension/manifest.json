{
  "manifest_version": 3,
  "name": "Soundcloud RPC",
  "key": "ed55232f-1a84-48d7-ae5c-49a129b90435",
  "version": "0.1",
  "description": "Soundcloud Rich Presence for Discord",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://soundcloud.com/*",
    "*://w.soundcloud.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws://localhost:* wss://localhost:*"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Soundcloud RPC"
  },
  "content_scripts": [
    {
      "matches": ["*://soundcloud.com/*"],
      "js": [
        "content/hook.js",
        "content/logger.js",
        "content/metadata.js",
        "content/index.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "soundcloud-rpc@example.com",
      "strict_min_version": "109.0"
    }
  }
}